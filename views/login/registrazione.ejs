<!doctype html>
<html lang="it">

<head>
    <%- include("../partials/head")%>
</head>

<body class="bootstrap">

    <nav id="topNavBar" class="navbar navbar-expand-lg navbar bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Meteo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <l1>
                        <input type="checkbox" class="btn-check" id="darkModeToggle" autocomplete="off">
                        <label class="btn btn-outline-primary" for="darkModeToggle">dark mode</label>
                    </l1>
                </ul>
            </div>
            <div id="ricerca" class="d-flex">
                <div id="ricercaDropdown" class="rounded shadow-5">
                </div>
                <form id="formRicerca" class="d-none d-md-flex input-group w-auto my-auto">
                    <input id="inputRicerca" class="form-control me-2" type="search"
                        placeholder="Inserisci una città..." aria-label="Search" autocomplete="off">
                    <button class="btn btn-outline-success" type="submit">Cerca</button>
                </form>

            </div>
        </div>
    </nav>

    <div class="container text-center mt-3">
        <div class="text-center">
            <p class="h3 mb-3">Registrazione</p>
        </div>
        <form id="signForm">
            <div class="form-outline mb-4">
                <input type="text" name="userName" id="userName" class="form-control" required/>
                <label class="form-label" for="userName">username</label>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" name="mail" id="mail" class="form-control" required/>
                <label class="form-label" for="mail">indirizzo Email</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="password" name="pw" id="pw" class="form-control" required/>
                <label class="form-label" for="pw">Password</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Registrati</button>
        </form>
        <div class="text-center">
            <p>Già registrato? <a href="/login">utenticati</a></p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/sha256.js"></script>
    <script src="../js/registrazione.js"></script>
    <%- include("../partials/scriptFondoPagina")%>
</body>

</html>