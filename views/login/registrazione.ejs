<!doctype html>
<html lang="it">

<head>
    <%- include("partials/head")%>
    <link rel="stylesheet" type="text/css" href="../css/sign.css">
</head>

<body class="bootstrap">

    <nav id="topNavBar" class="navbar navbar-expand-lg navbar bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Meteo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="../">Home</a>
                    </li>
                    <l1>
                        <input type="checkbox" class="btn-check" id="darkModeToggle" autocomplete="off">
                        <label class="btn btn-outline-primary" for="darkModeToggle">dark mode</label>
                    </l1>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container text-center signFormContainer">
        <div class="text-center">
            <p id="formTitle" class="h3">Registrazione</p>
        </div>
        <form id="signForm" method="POST" action="/creaUtente">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" name="mail" id="mail" class="form-control" required/>
                <label class="form-label" for="mail">indirizzo Email</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="password" name="pw" id="pw" class="form-control" required/>
                <label class="form-label" for="pw">Password</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Registrati</button>
        </form>
        <div class="text-center">
            <p>Gi√† registrato? <a href="/login">utenticati</a></p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/sha256.js"></script>
    <script src="../js/darkMode.js"></script>
    <script src="../js/sign.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>